<Window x:Class="SalaryFond.Views.Windows.WorkerEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalaryFond.Views.Windows"
        xmlns:c="clr-namespace:SalaryFond.Infrastructure.Commads"
        mc:Ignorable="d"
        Title="Редактирование сортрудника" Height="550" Width="500"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                        <RowDefinition Height="160"/>


                    </Grid.RowDefinitions>
                    
                    <Grid Grid.Row="0">
                        <StackPanel>
                            <TextBlock Text="ФИО"/>
                            <TextBox Width="180" HorizontalAlignment="Left" Text="{Binding FIO}"/>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="1">
                        <StackPanel>
                            <TextBlock Text="Основная должность"/>
                            <TextBox Width="180" HorizontalAlignment="Left" Text="{Binding MainProfession}"/>
                        </StackPanel>
                    </Grid>
                    <GroupBox Header="Начисления" Grid.Row="2"  BorderBrush="Black">
                        <StackPanel>
                            <TextBlock Text="Оклад"/>
                            <TextBox Width="180" HorizontalAlignment="Left" Text="{Binding MainSalary}"/>

                            <TextBlock Text="Норма часов"/>
                            <TextBox Width="180" HorizontalAlignment="Left" Text="{Binding NormalHours}"/>

                            <TextBlock Text="Отработанные часы"/>
                            <TextBox Width="180" HorizontalAlignment="Left" Text="{Binding WorkedHours}"/>

                            <TextBlock Text="Премия руководителя"/>
                            <TextBox Width="180" HorizontalAlignment="Left" Text="{Binding PrizeBoss}"/>

                            <TextBlock Text="Отпусктные"/>
                            <TextBox Width="180" HorizontalAlignment="Left" Text="{Binding HolidayPay}"/>
                            <TextBlock Text="Больничные"/>
                            <TextBox Width="180" HorizontalAlignment="Left" Text="{Binding SickPay}"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Выплаты" Grid.Row="3" BorderBrush="Black">
                        <StackPanel>
                            <TextBlock Text="Аванс"/>
                            <TextBox Width="180" HorizontalAlignment="Left" Text="{Binding Prepayment}"/>

                            <TextBlock Text="РКО"/>
                            <TextBox Width="180" HorizontalAlignment="Left" Text="{Binding RKO}"/>

                            <TextBlock Text="Исп. лист"/>
                            <TextBox Width="180" HorizontalAlignment="Left" Text="{Binding ExecutiveList}"/>

                            <TextBlock Text="Перечисленно р/с"/>
                            <TextBox Width="180" HorizontalAlignment="Left" Text="{Binding TransferByCard}"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="EditPCMemberButton" Content="OK" Width="40" Height="20" Margin="0,0,30,0" IsDefault="True"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=local:WorkerEditorWindow}}">
                    <Button.Command>
                        <c:CloseDialogCommand DialogResult="True"/>
                    </Button.Command>
                </Button>
                <Button x:Name="CancelButton" Content="Отмена" Width="50" Height="20" Margin="0,0,20,0" IsCancel="True"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=local:WorkerEditorWindow}}">
                    <Button.Command>
                        <c:CloseDialogCommand DialogResult="False"/>
                    </Button.Command>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
